<h1>Listing users</h1>

<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>
<% end %>
<p class="pull-right">
	<%= link_to 'New User', new_user_path, :class => "btn btn-danger", :style => "color:white" %>
</p>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Postcode</th>
    <th>Mobile</th>
    <th>RFID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= "#{user.forename} #{user.surname}" %></td>
    <td><%= user.postcode %></td>
    <td><%= user.mobile %></td>
    <td><%= user.rfid %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


   

