<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="span4">
  	  <div class="field">
	    <%= f.label :forename %>
	    <%= f.text_field :forename %>
	  </div>
	  <div class="field">
	    <%= f.label :surname %>
	    <%= f.text_field :surname %>
	  </div>
	  <div class="field">
	    <%= f.label :address %>
	    <%= f.text_field :address %>
	  </div>
	  <div class="field">
	    <%= f.label :postcode %>
	    <%= f.text_field :postcode %>
	  </div>
	  <div class="field">
	    <%= f.label :mobile %>
	    <%= f.text_field :mobile %>
	  </div>
	  <div class="field">
	    <%= f.label :email %>
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :notes %>
	    <%= f.text_field :notes %>
	  </div>

  </div>
  <div class="span4">
	<div class="field">
  	  <% Event.all.each do |event| -%>
	    <div>
		<%= label_tag :event_ids, :class => "checkbox" do %>
	    	<%= check_box_tag :event_ids, event.id, @user.events.include?(event), :name => "user[event_ids][]" %> <%= event.name %>
		<% end %>
	    </div>
	  <% end -%>
	</div>
	  <div class="field">
	    <%= f.label :rfid %>
	    <%= f.text_field :rfid %>
	  </div>
	  <div class="actions">
	    <%= f.submit :class => "btn btn-danger", :style => "color:white" %>
	  </div>
  </div>
</div>

<% end %>
